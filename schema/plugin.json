{
  "jupyter.lab.shortcuts": [],
  "title": "Resource Culler",
  "description": "Automatic culling of idle kernels, terminals, and sessions",
  "type": "object",
  "properties": {
    "kernelCullEnabled": {
      "type": "boolean",
      "title": "Enable Kernel Culling",
      "default": true
    },
    "kernelCullIdleTimeout": {
      "type": "integer",
      "title": "Kernel Idle Timeout (minutes)",
      "description": "Default: 1 hour (60 minutes)",
      "default": 60,
      "minimum": 1
    },
    "terminalCullEnabled": {
      "type": "boolean",
      "title": "Enable Terminal Culling",
      "default": true
    },
    "terminalCullIdleTimeout": {
      "type": "integer",
      "title": "Terminal Idle Timeout (minutes)",
      "description": "Default: 1 hour (60 minutes)",
      "default": 60,
      "minimum": 1
    },
    "terminalCullDisconnectedOnly": {
      "type": "boolean",
      "title": "Only Cull Disconnected Terminals",
      "description": "When enabled, only cull terminals with no active browser tab. Terminals with open tabs are kept even if idle.",
      "default": true
    },
    "sessionCullEnabled": {
      "type": "boolean",
      "title": "Enable Session Culling",
      "default": false
    },
    "sessionCullIdleTimeout": {
      "type": "integer",
      "title": "Session Idle Timeout (minutes)",
      "description": "Default: 7 days (10080 minutes)",
      "default": 10080,
      "minimum": 1
    },
    "cullCheckInterval": {
      "type": "integer",
      "title": "Check Interval (minutes)",
      "default": 5,
      "minimum": 1
    },
    "showNotifications": {
      "type": "boolean",
      "title": "Show Notifications",
      "description": "Display summary notification when resources are culled",
      "default": true
    }
  },
  "additionalProperties": false
}
